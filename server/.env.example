# This file contains the example environment variables for the server.
# Copy this file to .env and replace the values with your own.

# Server port
PORT=3000

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/chatroom

# JWT secret key
JWT_SECRET=mysecretkey

# Socket.io origins
SOCKET_ORIGINS=http://localhost:3000

# CORS allowed origins
CORS_ORIGINS=http://localhost:3000

# Reds configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=