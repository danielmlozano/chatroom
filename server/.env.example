# This file contains the example environment variables for the server.
# Copy this file to .env and replace the values with your own.

# Server port
PORT=3000

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/chatroom
MONGODB_USER=root
MONGODB_PASSWORD=secret123

# Socket.io origins
SOCKET_ORIGINS=http://localhost:3000

# CORS allowed origins
CORS_ORIGINS=http://localhost:3000

# Reds configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# BASE URL
BASE_URL=http://localhost:8000